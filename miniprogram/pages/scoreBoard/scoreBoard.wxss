/* miniprogram/pages/scoreBoard/scoreBoard.wxss */

.container {
  width: 80%;
  margin: 0 auto;
  margin-bottom: 50rpx;
}

.page__bd{
  padding-bottom: 0;
}

.nameBar {
  margin-bottom: 20rpx;
  margin-top: 10rpx;
  width: 100%;
  height: 80rpx;
}

.slider {
  display: block ;
  width: 80%;
  margin: 20rpx auto;
  margin-bottom: 40rpx;
}

.name {
  width: 30%;
  text-align: left;
  height: 80rpx;
  line-height: 80rpx;
  float: left;
  margin-right: 10rpx;
  padding-right: 5%;
  font-size: 1rem;
}

.score {
  width: 20rpx;
  text-align: right;
}

.changeScore {
  display: block;
  width: 120rpx;
  height: 80;
  line-height: 80rpx;
  margin-left: 30rpx;
  text-align: center;
  float: right;
}
@media (min-width: 768px) {

.nameBar {
  margin-bottom: 20px;
  margin-top: 10px;
  width: 100%;
  height: 40px;
}

.name {
  height: 40px;
  line-height: 40px;
  margin-right: 20px;
  font-size: 1.2em;

}

.score {
  width: 20px;
  text-align: right;
}

.changeScore {
  display: block;
  width: 120px;
  line-height: 40px;
  margin-left: 30px;
  text-align: center;
  float: right;
}

}


.name-input-tag {
  width: 80%;
  margin: 20rpx auto;
  height: 45px;
}

.name-input {
  text-align: left;
  margin: 0 auto;
  padding: 0 0 0 30rpx;
  height: inherit;
  display: block;
  border-width: 1px;
  border-style: solid;
  border-color: grey;
  border-radius: 5px;
}

.delete {
  float: left;
  margin-right: 20%;
}

.optionIcon {
  display: block;
  width: 80%;
  margin: 50rpx auto;
  margin-top: 100rpx;
  text-align: center;
  padding-bottom: 20rpx;
}

.deletePlayer{
  margin-top: 40rpx;
  width: 80%;
}



.page-ft {
  padding-bottom: 10rpx;
  text-align: center;
  color: grey;
}

